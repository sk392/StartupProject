<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/pale_grey"
    android:id="@+id/rl_reservation_item_header"
    android:layout_height="50dp">

        <TextView
            android:layout_marginLeft="25dp"
            android:layout_marginTop="23dp"
            android:id="@+id/tv_res_header"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Slateblueappleregular12"/>

        <com.sk392.kr.carmony.Library.SquareImageView
            android:id="@+id/iv_res_header"
            android:layout_marginTop="18dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="25dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/white_six"
            android:layout_marginTop="49.5dp"/>
</RelativeLayout>