<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/schedule_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="50dp"
        android:layout_height="511dp">

        <RelativeLayout
            android:id="@+id/rl_schedule_start"
            android:layout_width="match_parent"
            android:layout_height="75.5dp"
            android:layout_marginTop="10dp">

            <com.sk392.kr.carmony.Library.SquareImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12.1dp"
                android:background="@drawable/rent_icon" />

            <TextView
                style="@style/Warmgreyappleregular12"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="18.5dp"
                android:text="일정 시작" />

            <TextView
                android:id="@+id/tv_schedule_start"
                style="@style/Darkgrayhelveregular15"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="34dp" />

            <com.sk392.kr.carmony.Library.SquareImageView

                android:layout_width="42dp"
                android:layout_height="18dp"
                android:layout_marginLeft="325dp"
                android:layout_marginTop="28.5dp"
                android:background="@drawable/arrow_big_gray" />

        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="86dp"
            android:background="@color/white_six" />

        <RelativeLayout
            android:id="@+id/rl_schedule_end"
            android:layout_width="match_parent"
            android:layout_height="75.5dp"
            android:layout_marginTop="86dp">

            <com.sk392.kr.carmony.Library.SquareImageView
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15.1dp"
                android:background="@drawable/return_icon" />

            <TextView
                style="@style/Warmgreyappleregular12"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="18.5dp"
                android:text="일정 종료" />

            <TextView
                android:id="@+id/tv_schedule_end"
                style="@style/Darkgrayhelveregular15"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="85dp"
                android:layout_marginTop="34dp" />

            <com.sk392.kr.carmony.Library.SquareImageView

                android:layout_width="42dp"
                android:layout_height="18dp"
                android:layout_marginLeft="325dp"
                android:layout_marginTop="28.5dp"
                android:background="@drawable/arrow_big_gray" />

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="162dp"
            android:background="@color/white_six" />

    </RelativeLayout>

    <Button
        android:id="@+id/bt_schedule_add"
        style="@style/Whiteapplebold13"
        android:layout_width="325dp"
        android:layout_height="45dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/large_button_type"
        android:gravity="center_horizontal|center_vertical"
        android:text="@string/schedule_registering" />

</RelativeLayout>

