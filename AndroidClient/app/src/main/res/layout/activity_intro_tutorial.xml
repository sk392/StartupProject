<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.sk392.kr.carmony.Activity.IntroTutorialActivity">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <android.support.v4.view.ViewPager
            android:id="@+id/intropager"
            android:layout_width="match_parent"
            android:layout_height="410dp"
            android:layout_marginBottom="56dp"
            android:layout_marginTop="80dp"
            android:paddingLeft="24dp"
            android:paddingRight="24dp" />

        <com.viewpagerindicator.CirclePageIndicator
            android:id="@+id/titles"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="490dp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="500dp"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/intrologin"
                style="@style/Whiteapplemedium13"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:background="@drawable/large_button_type"
                android:gravity="center_horizontal|center_vertical"
                android:text="LOGIN" />

            <Button
                android:id="@+id/introsignup"
                style="@style/Whiteapplemedium13"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginLeft="160dp"
                android:background="@drawable/large_button_type"
                android:gravity="center_horizontal|center_vertical"
                android:text="SIGN UP" />
        </RelativeLayout>
    </RelativeLayout>

</RelativeLayout>
