<?xml version="1.0" encoding="utf-8"?>

<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">
    <!--
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        -->
    <RelativeLayout
        android:id="@+id/search_layout"
        android:layout_marginBottom="108dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/rl_search_start"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="69dp"
                        android:src="@color/reddish_orange_trans_2" />

                    <com.sk392.kr.carmony.Library.SquareImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/rent_icon" />

                    <TextView
                        style="@style/Warmgreyappleregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="10.5dp"
                        android:text="@string/search_start" />

                    <TextView
                        android:id="@+id/tv_search_start"
                        style="@style/Darkgrayhelveregular15"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="26dp" />
                </RelativeLayout>

                <com.sk392.kr.carmony.Library.SquareImageView

                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="325dp"
                    android:background="@drawable/arrow_big_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_six" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_search_end"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="69dp"
                        android:src="@color/reddish_orange_trans_2" />

                    <com.sk392.kr.carmony.Library.SquareImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/return_icon" />

                    <TextView
                        style="@style/Warmgreyappleregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="10.5dp"
                        android:text="@string/search_end" />

                    <TextView
                        android:id="@+id/tv_search_end"
                        style="@style/Darkgrayhelveregular15"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="26dp" />
                </RelativeLayout>

                <com.sk392.kr.carmony.Library.SquareImageView

                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="325dp"
                    android:background="@drawable/arrow_big_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_six" />
            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_search_subway"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="6dp"
                        android:layout_height="6dp"
                        android:layout_marginLeft="69dp"
                        android:src="@color/reddish_orange_trans_2" />

                    <com.sk392.kr.carmony.Library.SquareImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="4dp"
                        android:background="@drawable/location_icon" />

                    <TextView
                        style="@style/Warmgreyappleregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="10.5dp"
                        android:text="@string/rent_location" />

                    <TextView
                        android:id="@+id/tv_search_subway"
                        style="@style/Darkgrayhelveregular15"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="26dp" />
                </RelativeLayout>

                <com.sk392.kr.carmony.Library.SquareImageView

                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="325dp"
                    android:background="@drawable/arrow_big_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_six" />

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_search_car_model"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:layout_height="0dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true">

                    <com.sk392.kr.carmony.Library.SquareImageView
                        android:layout_width="44dp"
                        android:layout_height="44dp"
                        android:layout_marginLeft="25dp"
                        android:background="@drawable/car_icon" />

                    <TextView
                        style="@style/Warmgreyappleregular12"
                        android:layout_width="wrap_content"
                        android:layout_height="18dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="6.5dp"
                        android:text="@string/car_model" />

                    <TextView
                        android:id="@+id/tv_search_car_model"
                        style="@style/Darkgrayhelveregular15"
                        android:layout_width="wrap_content"
                        android:layout_height="24dp"
                        android:layout_marginLeft="85dp"
                        android:layout_marginTop="22dp"
                        android:text="@string/car_model_all" />

                </RelativeLayout>

                <com.sk392.kr.carmony.Library.SquareImageView

                    android:layout_width="wrap_content"
                    android:layout_height="22dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="325dp"
                    android:background="@drawable/arrow_big_gray" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_alignParentBottom="true"
                    android:background="@color/white_six" />
            </RelativeLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_option"
                android:layout_width="match_parent"
                android:layout_weight="1.0"
                android:layout_height="0dp"
                android:orientation="horizontal"
                android:paddingLeft="25dp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_weight="0.8"
                android:layout_height="0dp">

                <Button
                    android:id="@+id/bt_search"
                    style="@style/Warmgreyapple15"
                    android:layout_centerInParent="true"
                    android:layout_width="325dp"
                    android:layout_height="45dp"
                    android:background="@drawable/button_main_type"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="@string/search"
                    android:textColor="@drawable/button_main_text_type" />
            </RelativeLayout>
        </LinearLayout>


    </RelativeLayout>
    <!--
            </android.support.v4.widget.NestedScrollView>
    -->
</android.support.design.widget.CoordinatorLayout>