<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="85dp"
    android:gravity="center_vertical">

    <RelativeLayout
        android:layout_width="90dp"
        android:layout_height="65dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:background="@drawable/carinfo_default_image">

        <ImageView
            android:id="@+id/iv_owner_car_info_item"
            android:layout_width="90dp"
            android:layout_height="65dp"
            android:layout_centerVertical="true"
            android:scaleType="centerCrop" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="130dp"
        android:layout_marginTop="31dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_owner_car_info_item_model"
            style="@style/Blackappleregular15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_owner_car_info_item_year"
            style="@style/Blackappleregular15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textStyle="bold" />

    </LinearLayout>

    <ImageView
        android:layout_width="13dp"
        android:layout_height="22dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="25dp"
        android:background="@drawable/arrow_big_gray" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="84.5dp"
        android:background="@color/white_six" />
</RelativeLayout>
