<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="60dp">


    <View
        android:layout_width="1dp"
        android:layout_height="60dp"/>
    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/iv_option_dialog_item"
        android:layout_marginLeft="25dp"
        android:layout_centerVertical="true"/>

    <TextView
        android:id="@+id/tv_option_dialog_item"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="68dp"
        android:ellipsize="end"
        android:lines="1"
        android:text="@string/empty_option"
        style="@style/Blacktwoappleregular14"/>

    <CheckBox
        android:id="@+id/cb_option_dialog_item"
        android:layout_width="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:focusable="false"
        android:layout_height="wrap_content"
        android:layout_marginRight="25dp"
        android:button="@drawable/option_item_select_type"
        android:layout_gravity="center_vertical"/>
</RelativeLayout>