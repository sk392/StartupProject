<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="45dp">

    <View
        android:layout_width="0.1dp"
        android:layout_height="45dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:gravity="center_vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/clockwise_subway_history_list" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="39dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_subway_search_history_item_text"
                style="@style/Warmgreyapple14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="검색어" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="60dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_subway_search_history_item_date"
                style="@style/Warmgreyappleregular13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12.30." />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/iv_subway_search_history_item"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/close_subway_history_list" />

        </RelativeLayout>

    </RelativeLayout>


</RelativeLayout>