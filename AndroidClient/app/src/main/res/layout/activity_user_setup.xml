<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <include
        layout="@layout/view_toolbar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:paddingBottom="60dp"
                android:layout_height="match_parent">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/iv_usersetup_profile"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:src="@drawable/profile" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="120dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/Greyishappleregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/name" />

                <TextView
                    android:id="@+id/tv_usersetup_name"
                    style="@style/Blacktwoappleregular14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="60dp"

                    android:layout_marginTop="17dp"
                    android:text="공유" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="49dp"
                    android:background="@color/white_six" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="170dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/Greyishappleregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/email" />

                <TextView
                    android:id="@+id/tv_usersetup_email"
                    style="@style/Blacktwoappleregular14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="17dp"
                    android:text="공유" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="49dp"
                    android:background="@color/white_six" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="220dp"
                android:orientation="horizontal">


                <TextView
                    style="@style/Greyishappleregular12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:text="@string/Contact" />

                <TextView
                    android:id="@+id/tv_usersetup_phone"
                    style="@style/Blacktwoappleregular14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="17dp"
                    android:text="0100101010" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginLeft="60dp"
                    android:layout_marginRight="35dp"
                    android:layout_marginTop="49dp"
                    android:background="@color/white_six" />
            </RelativeLayout>


            <Button
                android:id="@+id/bt_usersetup_regist_licen"
                style="@style/Warmgreyappleregular13"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="320dp"
                android:textColor="@drawable/button_main_text_type"
                android:background="@drawable/button_main_type"
                android:text="@string/regist_licen" />

            <Button
                android:id="@+id/bt_usersetup_regist_card"
                style="@style/Warmgreyappleregular13"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="380dp"
                android:background="@drawable/nonback_button_type_dimmed"
                android:text="@string/regist_card" />
                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="450dp"
                    android:background="@color/white_six" />
            <Button
                android:id="@+id/bt_usersetup_contact_change"

                style="@style/Warmgreyappleregular13"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="475dp"
                android:textColor="@drawable/button_main_text_type"
                android:background="@drawable/button_main_type"
                android:text="@string/contact_change" />

            <Button
                android:id="@+id/bt_usersetup_passwd_change"

                style="@style/Warmgreyappleregular13"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="535dp"
                android:textColor="@drawable/button_main_text_type"
                android:background="@drawable/button_main_type"
                android:text="@string/passwd_change" />

                <View
                    android:layout_width="200dp"
                    android:layout_height="1dp"
                    android:layout_centerHorizontal="true"

                    android:layout_marginTop="605dp"
                    android:background="@color/white_six" />

            <Button
                android:id="@+id/bt_usersetup_logout"
                style="@style/Reddishorangeappleregular13"
                android:layout_width="290dp"
                android:layout_height="45dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="630dp"
                android:textColor="@drawable/button_main_text_type_reverse"
                android:background="@drawable/button_main_type_reverse"
                android:gravity="center_vertical|center_horizontal"
                android:text="@string/Logout" />

            </RelativeLayout>


        </RelativeLayout>

    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>